body
  background-color grey200
  color grey600
  font-size 16px
  font-weight 100
  line-height 1.6em
  margin 0
  padding 0
  -webkit-font-smoothing subpixel-antialiased

  *
    max-height 1000000em

h1, h2, h3, h4, p, li, dt, dd
  font-family baseFontFamily

h1, .post-meta
  text-align center

a, a:visited
  color lightBlue500
  text-decoration none
  transition all ease 0.7s
  -webkit-transition all ease 0.7s

a:focus, a:hover
  color darken(lightBlue500, 50%)

p, li, dt, dd
  font-size 16px
  font-weight 100
  line-height 25px

dt
  font-weight 400

li
  padding-left 0.8em

pre
  -moz-box-sizing border-box
  background grey300
  box-sizing border-box
  border grey500 1px solid
  border-radius 3px
  font-family preFontFamily
  font-size 0.9em
  margin 0 0 1.75em 0
  overflow auto
  padding 10px
  width 100%
  white-space pre

p code
  background grey300
  border grey500 1px solid
  border-radius 2px
  font-family preFontFamily
  font-size 0.85em
  line-height 1.2em
  padding 1px 3px
  white-space pre-wrap

h1
  color white
  font-family headerFontFamily
  font-size 60px
  font-weight bold
  line-height 60px
  margin 0
  padding 0

img
  max-width 100%
  height auto
  display block