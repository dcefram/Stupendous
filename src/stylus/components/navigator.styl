#navigator
  background black
  max-width 100%
  margin 0
  overflow hidden
  position relative
  z-index 1
  border 0
  
  .site-title
    font-family headerFontFamily
    font-size 40px
    position absolute
    height 100%
    width 100%
    text-align center
    left 0
    display flex
    align-items center
    justify-content center
    color white
    z-index 0
    
    &:hover
      color darken(white, 50%)

  ul
    float left
    width auto
    position relative
    z-index 1
    margin-left 30px
    
    li
      float left
      height 80px
      margin 0

      a
        color white
        display inline-block
        padding 27px 10px

        &:hover
          color lightBlue500