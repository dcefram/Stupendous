#navigator
  background black
  max-width 100%
  margin 0
  overflow hidden
  position relative
  z-index 1
  border 0
  display flex

  .site-title
    font-family headerFontFamily
    font-size 40px
    position absolute
    height 100%
    width 100%
    text-align center
    left 0
    display flex
    align-items center
    justify-content center
    z-index 0

    a
      color white

      &:hover
        color darken(white, 50%)

    .logo-image
      display inline-block
      min-width 80px
      max-height 40px
      vertical-align middle

  ul
    flex 1
    position relative
    z-index 1
    margin-left 30px

    li
      float left
      height 80px
      margin 0

      a
        color white
        display inline-block
        padding 27px 10px

        &:hover
          color lightBlue500

  .socials
    display flex
    flex 1
    position relative
    text-align right
    z-index 1
    align-items center
    justify-content flex-end
    padding-right 30px

    a
      color white

      i
        font-size 22px

      &:hover
        color lightBlue500