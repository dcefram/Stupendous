#navigator
  background black
  max-width 100%
  margin 0
  overflow hidden
  position fixed
  top 0
  width 100%
  z-index 2
  border 0
  display flex

  .menu-toggle
    align-items center
    justify-content center
    cursor pointer
    transition all ease 0.7s
    -webkit-transition all ease 0.7s

    &:hover
        color darken(lightBlue500, 50%)

  .site-title
    font-family headerFontFamily
    font-size 40px
    position relative
    text-align center
    left 0
    display flex
    align-items center
    justify-content center
    z-index 0

    a
      color white

      &:hover
        color darken(white, 50%)

    .logo-image
      display inline-block
      min-width 80px
      max-height 40px
      vertical-align middle

  ul
    flex 1
    position relative
    z-index 0
    margin-left 30px

    li
      float left
      height 80px
      margin 0

      a
        color white
        display inline-block
        padding 27px 10px

        &:hover
          color lightBlue500

  .socials
    display flex
    flex 1
    position relative
    text-align right
    z-index 0
    align-items center
    justify-content flex-end
    padding-right 30px

    a
      color white

      i
        font-size 22px

      &:hover
        color lightBlue500
