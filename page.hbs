{{!< default}}
{{#post}}
<main class="content{{#if feature_image}} with-header{{/if}}" role="main">
  {{#if feature_image}}
  <div class="post-background">
    <div class="image" style="background-image: url({{feature_image}});"></div>
  </div>
  <header class="post-header">
    <h1 class="post-title">{{title}}</h1>
  </header>

  {{/if}}

  <article class="{{post_class}} {{#unless feature_image}}no-post-header{{/unless}}">
    {{^if feature_image}}
    <header>
      <h1 class="post-title">{{title}}</h1>
    </header>
    {{/if}}

    <section class="post-content">
      {{content}}
    </section>

  </article>

</main>
{{/post}}