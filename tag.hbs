{{!< default}}

<main class="content with-header" role="main">
  {{#if tag.feature_image}}
  <div class="post-background">
    <div class="image" style="background-image: url({{tag.feature_image}});"></div>
  </div>
  <header id="site-head" class="tag">
    {{#if @blog.logo}}<h1 class="blog-title">{{@blog.title}}</h1>{{/if}}
    <h3>#{{tag.name}}</h3>
  </header>

  {{else}}

  <header id="site-head">

    {{#if @blog.logo}}<h1 class="blog-title">{{@blog.title}}</h1>{{/if}}
    <h3>#{{tag.name}}</h3>
  </header>

  {{/if}}

  {{#foreach posts}}

  <article class="preview">
    {{#if feature_image}}
    <div class="preview-image">
      <a href="{{url}}" title="{{title}}"><p><img src="{{img_url feature_image}}" alt="Featured" /></p></a>
    </div>
    {{/if}}
    <header>
      <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
      <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
    </header>
    <section class="post-excerpt">
      <p>{{excerpt}}&hellip;</p>
      <p class="readmore"><a href="{{url}}">Read this article <i class="fa fa-chevron-circle-right"></i></a></p>
    </section>
  </article>

  {{/foreach}}

  {{pagination}}

</main>